<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <!--姓名-->
    <TextView
        android:id="@+id/p_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:textSize="16sp" />
    <!--性别-->
    <TextView
        android:id="@+id/p_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"

        android:textSize="16sp" />
    <!--身份证-->
    <TextView
        android:id="@+id/p_idcard_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/p_sex"
        android:text="@string/patient_idCard"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/p_idcard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLength="18"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="16sp" />
    <!--出生日期-->
    <TextView
        android:id="@+id/p_birthday_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/patient_birthday"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/p_birthday"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        android:textSize="16sp" />

    <ImageView
        android:id="@+id/p_editor_ib"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:src="@drawable/ic_edit_24dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/p_delete_ib"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete_24dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/p_select_ib"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="设置为当前用户"

        android:textColor="#1E88E5"
        android:textSize="16sp" />

</LinearLayout>